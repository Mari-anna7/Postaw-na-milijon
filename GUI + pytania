def akcja_plusik4():
    global kasa_gracza
    global kasa_zapadnia4
    if kasa_gracza>0:
        if kasa_zapadnia2==0 or kasa_zapadnia3==0 or kasa_zapadnia1==0:
            kasa_gracza-=25000
            kasa_do_rozlozenia.config(text = kasa_gracza)
