##############################

kasa_gracza = 1000000
kasa_do_rozlozenia = tk.Label(glowne_okno, text = kasa_gracza, font=100)
kasa_do_rozlozenia.place(relx=0.5, rely=0.7, relwidth=0.3, relheight=0.2, anchor='n')

glowne_okno.mainloop()
